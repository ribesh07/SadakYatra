<body>
  <h1>User Details Table</h1>

  <h2>Items</h2>
  <ul>
    <% data.forEach(item => { %>
      <li><%= item.username %></li>
    <% }) %>
  </ul>
  <br>
  <table id="userTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Contact</th>
        <th>Email</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(item => { %>
        <tr>
          <td><%= item.username %></td>
          <td><%= item.contact %></td>
          <td><%= item.email %></td>
          <td><img id="firebaseImage" src="<%= item.imageUrl %>" alt="Firebase Image" style="max-width: 10%; height: auto;"></td>

          <td>
            <button onclick="editbutton('<%= item.username %>','<%= item.email %>','<%= item.contact %>')" >Edit</button>
            <button onclick="deleteBtn('<%= item.uid %>')" >Delete</button>
          </td>
    <%}) %>
    </tbody>
  </table><br>
  <h2>Add User</h2><br>
  <form id="updateForm" enctype="multipart/form-data" method="post" action="/user-create">
    <label for="username">Userame: </label>
    <input type="text" id="username" name="username" required><br><br>
    <label for="password">Password: </label>
    <input type="password" id="password" name="password" required><br><br>
    <label for="contact">Contact: </label>
    <input type="text" id="contact" name="contact" required><br><br>
    <label for="email">Email:  </label>
    <input type="email" id="email" name="email" required><br><br>
    <label for="image">Image: </label>
    <input type="file" id="image" name="image" accept="image/*" required><br><br>
    <button type="submit">Add User</button>
  </form>
  <br>
<script>
  document.getElementById('uploadForm').addEventListener('submit', async (event) => {
    event.preventDefault();

    const loadingScreen = document.getElementById('loadingScreen');
    loadingScreen.style.display = 'block'; 

    const formData = new FormData();
    formData.append('image', document.getElementById('image').files[0]);
    formData.append('username', document.getElementById('username').value);
    formData.append('password', document.getElementById('password').value);
    formData.append('contact', document.getElementById('contact').value);
    formData.append('email', document.getElementById('email').value);


    try {
      const response = await fetch('/user-create', {
        method: 'POST',
        body: formData
      });

      if (response.ok) {
        alert('Files uploaded successfully');
      } else {
        alert('Error uploading files....');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error uploading files!!!');
    }finally {
      loadingScreen.style.display = 'none'; // Hide loading screen
    }
  });
  function deleteBtn(uid) {
    alert("Delete Button Clicked");
    console.log("uid: " + uid);
  }
  
  function editbutton(user,email,contact) {
    alert("Edit Button Clicked "+user+email);
    console.log("---------------------------------");
    console.log(user);
    console.log(contact);
    console.log(email);
  }


</script>
</body>
